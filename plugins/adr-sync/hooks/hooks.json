{
  "description": "Detects ADR file writes/edits and triggers sync agent",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/detect-adr-write.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}